<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseTextStyle">
        <item name="android:lineHeight">26sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>

    </style>

    <style name="title" parent="BaseTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>


    </style>

    <style name="content" parent="BaseTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="content_settings">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:lineHeight">19sp</item>
        <item name="fontFamily">@font/ys_display_regular</item>
    </style>


    <style name="MainMenuButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginHorizontal">@dimen/main_marginHorizontal</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_marginTop">@dimen/main_marginTop_top</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/content</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="iconSize">24dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_marginEnd</item>
        <item name="iconTint">@color/YP_black</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
    </style>

    <style name="SettingsSwitchStyle" parent="Widget.MaterialComponents.CompoundButton.Switch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/settings_marginStar</item>
        <item name="android:paddingEnd">@dimen/settings_marginEnd</item>
        <item name="android:paddingTop">@dimen/settings_marginVertical</item>
        <item name="android:paddingBottom">@dimen/settings_marginVertical</item>
        <item name="android:textAppearance">@style/content_settings</item>
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackColor">@color/switch_track_color</item>
        <item name="trackTint">@color/switch_track_color</item>
        <item name="thumbRadius">10dp</item>
        <item name="trackHeight">14dp</item>
    </style>

    <style name="SettingsItemStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/settings_marginStar</item>
        <item name="android:paddingEnd">@dimen/settings_marginEnd</item>
        <item name="android:paddingTop">@dimen/settings_marginVertical</item>
        <item name="android:paddingBottom">@dimen/settings_marginVertical</item>
        <item name="android:textAppearance">@style/content_settings</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>

    </style>

    <style name="background_style_main">
        <item name="android:background">@color/YP_black</item>
        <item name="android:backgroundTint">@null</item>
    </style>


    <style name="background_style">
        <item name="android:background">@color/YP_black</item>
        <item name="android:backgroundTint">@null</item>
    </style>


    <style name="SearchContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:background">@drawable/rounded_search</item>
    </style>


    <style name="SearchIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="tint">@color/YP_black</item>
        <item name="android:layout_marginStart">12dp</item>
    </style>

    <style name="SearchInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginStart">48dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="android:textColorHint">@color/YP_black</item>
    </style>



    <style name="ClearIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="tint">@color/YP_black</item>
        <item name="android:layout_marginEnd">12dp</item>
    </style>

    <style name="TrackItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TrackArtwork">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">13dp</item>
        <item name="android:layout_marginVertical">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="TrackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>

    <style name="TrackInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TrackInfoContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TrackInfoSeparator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="TrackTextContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TrackArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="EmptyStateText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="RefreshButtonStyle" parent="Widget.MaterialComponents.Button">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">36dp</item>
    <item name="android:layout_marginTop">24dp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@drawable/button_retry_background</item>
    <item name="android:fontFamily">@font/ys_display_medium</item>
    <item name="android:textColor">@color/YP_black</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">false</item>
    </style>

    <style name="HistoryTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">19sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="rvHistory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ClearHistoryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:paddingVertical">4dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/YP_black</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/button_retry_background</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerTextStyle.Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerTextStyle.Additional">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PlayerTextStyle.Additional.Name">
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="PlayerTextStyle.Additional.Item">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextViewPlayerItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewPlayerItem.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/PlayerTextStyle.Additional.Name</item>
        <item name="layout_constraintStart_toEndOf">@id/playerAdditionalStartBaseLine</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="TextViewPlayerItem.Item">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAppearance">@style/PlayerTextStyle.Additional.Item</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="layout_constraintEnd_toStartOf">@id/playerAdditionalEndBaseLine</item>
    </style>

    <style name="ImageButtonPlayer" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@drawable/round_button</item>
    </style>

    <style name="PlayPauseButtonStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@color/YP_black</item>
    </style>


    <style name="MyTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="InfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/YP_black</item>
        <item name="android:backgroundTint">@null</item>
    </style>

</resources>

