<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Base.Theme.PlaylistMaker">

    <LinearLayout
        android:id="@+id/emptyStateView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:visibility="visible">

        <Button
            android:id="@+id/createPlaylistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_playlist"
            android:textSize="14sp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="14dp"
            android:fontFamily="@font/ys_display_medium"
            android:textAllCaps="false"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_retry_background"
            app:backgroundTint="?attr/colorPrimary"/>

        <ImageView
            android:id="@+id/emptyResultsIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:src="@drawable/ic_no_results_120"/>

        <TextView
            android:id="@+id/emptyResultsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_playlists"
            android:gravity="center"
            style="@style/NoTraksText"/>



    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPlaylists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</FrameLayout>