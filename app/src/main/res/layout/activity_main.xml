<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Base.Theme.PlaylistMaker"
    style="@style/background_style_main"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/title"
        app:titleTextAppearance="@style/title"
        app:titleTextColor="@color/white"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/search_b"
        style="@style/MainMenuButton"
        android:layout_marginTop="@dimen/main_marginTop"
        android:text="@string/search"
        app:icon="@drawable/ic_search"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/library_b"
        style="@style/MainMenuButton"
        android:text="@string/library"
        app:icon="@drawable/ic_library"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settings_b"
        style="@style/MainMenuButton"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:icon="@drawable/ic_settings"/>
</LinearLayout>